@model ApiAuctionShop.Models.Auctions
@{
    ViewData["Title"] = "Nowa aukcja";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Auction" asp-action="AddAuction" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">

    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="title" class="form-control" />
        </div>

        <label asp-for="description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="description" class="form-control" />
        </div>

        <label asp-for="startPrice" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="startPrice" class="form-control" />
        </div>

        <label asp-for="buyPrice" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="buyPrice" class="form-control" />
        </div>
        <label asp-for="startDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="startDate" class="form-control" />
        </div>
        <label asp-for="endDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="endDate" class="form-control" />
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="file" name="file" accept="image/*" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Send</button>
        </div>
    </div>
</form>


