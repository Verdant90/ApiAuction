@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model ApiAuctionShop.Models.Signup
@inject Microsoft.AspNet.Identity.SignInManager<ApiAuctionShop.Models.Signup> SignInManager

@{
    ViewData["Title"] = "Logowanie";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = @ViewData["ReturnUrl"], @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Zaloguj się</h4>
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            <!--<span asp-validation-for="Email" class="text-danger"></span>-->
            <span>@Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Zaloguj</button>
        </div>
    </div>
}

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
